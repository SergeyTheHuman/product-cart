doctype html
html(lang="ru")
	head
		include utils/mixins
		include utils/meta
		include utils/links
		include utils/fonts
		title Main Page
	body
		.wrapper
			.product-cart
				h3.product-cart__title Ваш заказ
				.product-cart__products
				.product-cart__fullprice Итого: #[span 0р.]
				button.product-cart__order Заказать
			.products
				.product__item(data-id="1")
					.product__item-image
						img(src='@img/fila.jpg').product__item-img
					h3.product__item-title Филадельфия
					.product__item-count.count
						button.count__minus
						input(type='text' value=0).count__current
						button.count__plus +
